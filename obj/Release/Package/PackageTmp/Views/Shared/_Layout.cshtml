<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    @*for Automatically  Refreshing Every 10 secs*@
    <meta http-equiv="refresh" content="100000">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PSA</title>
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/icons.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/app-dark.min.css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="~/Content/assets/images/StellantisLogo.jpg">

    <style>
        .footer-label {
            position: absolute;
            bottom: 5px; /* Adjust as needed */
            left: 50%;
            transform: translateX(-50%);
            text-align: center;
            /*background: rgba(0, 0, 0, 0.7); /* Optional: for better visibility */
            color: black; /* Optional: for better visibility */
            padding: 5px 10px; /* Optional: adjust padding */
            border-radius: 5px; /* Optional: rounded corners */
        }
    </style>
</head>
<body>
    <div class="account-pages my-3" style="width:100%;overflow:hidden;">
        <div class="container-fluid">
            <div class="row justify-content-center">

                <div class=" overflow-hidden">
                    @RenderBody()
                </div>

            </div>
        </div>


    </div>
    @*<div class="footer-label">
        <label>&copy; @DateTime.Now.Year <a href="http://www.teamliftss.com/" style="color:black!important">Teamliftss It System</a></label>
    </div>*@


    <script src="~/Content/assets/libs/jquery/jquery.min.js"></script>
    <script src="~/Content/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/Content/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/Content/assets/libs/node-waves/waves.min.js"></script>


    <!-- owl.carousel js -->
    <script src="~/Content/assets/libs/owl.carousel/owl.carousel.min.js"></script>
    <!-- auth-2-carousel init -->
    <script src="~/Content/assets/js/pages/auth-2-carousel.init.js"></script>
    <!-- two-step-verification js -->
    <script src="~/Content/assets/js/pages/two-step-verification.init.js"></script>

    @RenderSection("scripts", required: false)
    <!-- App js -->
    <script src="~/Content/assets/js/app.js"></script>

</body>
</html>
